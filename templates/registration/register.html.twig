{% extends 'base.html.twig' %}

{% block title %}{{ 'registration'|trans }}{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="offset-md-4 col-md-4 offset-sm-6 col-sm-6 d-flex flex-column justify-content-center align-items-center">
            <div class="form-container">
                <h3 class="title">{{ 'registration'|trans }}</h3>
                {% for message in app.flashes('error') %}
                    <div class="alert alert-danger">
                        {{ message }}
                    </div>
                {% endfor %}
                <form class="form-horizontal" action="{{ path('app_register') }}" method="post" autocomplete="off">
                    {{ form_start(registrationForm) }}
                    {{ form_row(registrationForm._token) }}
                    <div class="form-group">
                        {{ form_row(registrationForm.name, {'attr': {'class': 'form-control', 'placeholder': 'nameRegister'|trans}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(registrationForm.age, {'attr': {'class': 'form-control', 'placeholder': 'age'|trans}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(registrationForm.plainPassword, {'attr': {'class': 'form-control', 'placeholder':  'password'|trans }}) }}
                    </div>
                    <div class="form-group">
                    {{ form_row(registrationForm.agreeTerms) }}
                    </div>
                    <button type="submit" class="btn btn-primary">{{ 'signUp'|trans }}</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
