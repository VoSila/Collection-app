{% extends 'base.html.twig' %}

{% block title %}{% trans %}welcome{% endtrans %}{% endblock %}

{% block body %}
    {% block header %}{% endblock %}
    <div>
        <section class="section-head">
            <div class="container">
                <div class="row mb-4">
                    <div class="col-sm-6">
                        <h2 class="posts-entry-title">{{ 'popularCollection'|trans }}</h2>
                    </div>
                </div>
                <img src="https://2.downloader.disk.yandex.ru/preview/c53c0573d968ca1b701fb635dbf02b72adb3a1a85c3cc56dee0540ed2af2375b/inf/8Ab42w7MSYbuBd_JAkhNKgl9kiJuhvZjOxosTlxgD0G5sNcLHmz5IJdQTwW63ZtncjGk5KN-sDQc1c2Yq0jCuQ%3D%3D?uid=130147916&filename=scale_1200.png&disposition=inline&hash=&limit=0&content_type=image%2Fpng&owner_uid=130147916&tknv=v2&size=1280x903" alt="Изображение">

                <div class="row align-items-stretch retro-layout">
                    {% for collection in collections %}
                        <div class="col-md-4">
                            <a href="{{ path('app_collection', {'id': collection.id}) }}"
                               class="h-entry mb-30 v-height gradient">
                                <div class="featured-img" style="background-image: url(
                                {% if collection.imagePath != null %}
                                   'https://2.downloader.disk.yandex.ru/preview/f1eb71395a47449e8f28bf6bc978093260d73dc0e1d8f0c2613d1f1f8b0357b7/inf/UZd6BjuO09zlfz5e6DPChaW_FOmmxF038Y4ErzC76IJ5o0OVtXTuqiEBvaGEmal2t0nV1ig0G081-C1dp9NyuQ%3D%3D?uid=130147916&filename=%D0%9E%D0%B1%D0%BE%D0%B8%20%D0%B4%D0%BB%D1%8F%20%D1%80%D0%B0%D0%B1%D0%BE%D1%87%D0%B5%D0%B3%D0%BE%20%D1%81%D1%82%D0%BE%D0%BB%D0%B0.jpg&disposition=inline&hash=&limit=0&content_type=image%2Fjpeg&owner_uid=130147916&tknv=v2&size=1265x903'
                                {% else %}
                                    'https://st4.depositphotos.com/14953852/24787/v/450/depositphotos_247872612-stock-illustration-no-image-available-icon-vector.jpg'
                                {% endif %}
                                    );">
                                </div>
                                <div class="text_category with-overlay-top">
                                    <h6 style="color: white"> {{ 'category'|trans }}
                                        - {{ collection.category.name }}</h6>
                                </div>
                                <div class="text">
                                    <h2>{{ collection.name }}</h2>
                                    <span> {{ collection.user.email }} &nbsp;-&nbsp; {{ collection.createdAt ? collection.createdAt.format('F j, Y') : '' }}</span>
                                </div>
                            </a>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </section>
        <section class="section-foot">
            <div class="container">
                <div class="row blog-entries element-animate">
                    <div class="col-md-12 col-lg-8 main-content">
                        <div class="row mb-4">
                            <div class="col-sm-6" style="width: 100%">
                                <h2 class="posts-entry-title">{{ 'lastAddItems'|trans }}</h2>
                            </div>
                        </div>

                        <div class="row">
                            {% for item in items %}
                                <div class="col-lg-4 mb-4">
                                    <div class="post-entry-alt" style="height: 17em; position: relative;">
                                        <div class="excerpt">
                                            <h2>
                                                <a href="{{ path('app_item', {'id': item.id}) }}">{{ item.name }}</a>
                                            </h2>
                                            <h4></h4>
                                            <p>{{ 'collection'|trans }}: {{ item.itemCollection.name }}</p>
                                            {% if item.tags is not empty %}
                                                <p>{{ 'tags'|trans }}:
                                                    {% for tag in item.tags %}
                                                        {{ tag.name }}{% if not loop.last %}, {% endif %}
                                                    {% endfor %}
                                                </p>
                                            {% endif %}

                                            <div class="post-meta align-items-center text-left clearfix">
                                                <figure class="author-figure mb-0 me-3 float-start"><img
                                                        src="https://cdn-icons-png.flaticon.com/512/147/147144.png"
                                                        alt="Image" class="img-fluid"></figure>
                                                <span class="d-inline-block mt-1">
                                                    <a href="#">{{ item.itemCollection.user.email }}</a>
                                                </span><br>
                                                <span>{{ item.createdAt ? item.createdAt.format('F j, Y') : '' }}</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                    <div class="col-md-12 col-lg-4 sidebar">
                        <div class="sidebar-box">
                            <h3 class="heading">{{ 'tags'|trans }}</h3>
                            <ul class="tags">
                                {% for tag in tags %}
                                    <li><a href="#">{{ tag.name }}</a></li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <script type="application/javascript" src="{{ asset('js/translationButton.js') }}"></script>

{% endblock %}
