{% extends 'base.html.twig' %}

{% block title %}{{ 'login'|trans }}{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="offset-md-4 col-md-4 offset-sm-6 col-sm-6 d-flex flex-column justify-content-center align-items-center">
            <div class="form-container">
                <h3 class="title">{{ 'login'|trans }}</h3>
                <form class="form-horizontal" method="post">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'login') }}</div>
                    {% endif %}
                    <div class="form-group">
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail"
                               class="form-control" autocomplete="email" placeholder="Email" required autofocus>
                    </div>
                    <div class="form-group">
                        <input type="password" name="password" id="inputPassword" class="form-control"
                               autocomplete="current-password" placeholder="{{ 'password'|trans }}" required>
                    </div>
                    <div class="form-group">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        <div style="display: flex; align-items: center;">
                            <input type="checkbox" id="rememberMe" class="checkbox" name="_remember_me">
                            <label for="rememberMe" class="check-label" style="font-size: 16px; margin-left: 5px;">{{ 'rememberMe'|trans }}</label>
                        </div>
                    </div>

                    <div class="social-links d-flex justify-content-center">
                        <a class="btn btn-primary d-flex align-items-center" href="{{ path('connect_google_start') }}">
                            <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="currentColor" class="bi bi-google me-2" viewBox="0 0 16 16">
                                <path d="M15.545 6.558a9.4 9.4 0 0 1 .139 1.626c0 2.434-.87 4.492-2.384 5.885h.002C11.978 15.292 10.158 16 8 16A8 8 0 1 1 8 0a7.7 7.7 0 0 1 5.352 2.082l-2.284 2.284A4.35 4.35 0 0 0 8 3.166c-2.087 0-3.86 1.408-4.492 3.304a4.8 4.8 0 0 0 0 3.063h.003c.635 1.893 2.405 3.301 4.492 3.301 1.078 0 2.004-.276 2.722-.764h-.003a3.7 3.7 0 0 0 1.599-2.431H8v-3.08z"></path>
                            </svg>
                            Google
                        </a>
                    </div>
                    <button type="submit" class="btn btn-primary">{{ 'signIn'|trans }}</button>
                    <a class="btn btn-primary" href="{{ path('app_register') }}">{{ 'signUp'|trans }}</a>


                </form>
            </div>
        </div>
    </div>
{% endblock %}
