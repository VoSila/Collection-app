{% extends 'base.html.twig' %}

{% block title %}{{ action }} Item{% endblock %}

{% block body %}
    <div>
        <h1>{{ action|capitalize }} item</h1>

            {{ dump(form.customItemAttributeValues) }}

        {{ form_start(form, {'attr': {'class': 'p-5 bg-light'}}) }}

        <div class="form-group">
            {{ form_label(form.name) }}
            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            {% for attributeForm in form.customItemAttributeValues %}
                {{ form_row(attributeForm) }}
            {% endfor %}
        </div>

        <button type="submit" class="btn btn-primary">{{ action|capitalize }}</button>
        {{ form_end(form) }}

    </div>

{% endblock %}
